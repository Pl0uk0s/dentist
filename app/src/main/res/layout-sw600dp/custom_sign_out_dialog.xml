<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/sign_out_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/sing_out_dialog_title"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/sign_out_header"
        android:background="@color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_sign_out"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:text="@string/button_sign_out"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#0097A7"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/sign_out_cancel"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:text="@string/button_cancel"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#0097A7"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/dialog_sign_out" />
    </RelativeLayout>

</RelativeLayout>
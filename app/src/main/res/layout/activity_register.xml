<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4EA991"
    android:paddingLeft="25dp"
    android:clipToPadding="false">

    <LinearLayout
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        android:id="@+id/linearLayout"
        android:clipToPadding="false"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_white_36dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_back"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_back"
                android:id="@+id/txt_register"
                android:text="@string/txt_register"
                android:textSize="36dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_register"
                android:id="@+id/txt_email"
                android:text="@string/txt_email"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_email"
                android:inputType="textEmailAddress"
                android:layout_below="@id/txt_email"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:textCursorDrawable="@null"
                android:backgroundTint="#DADDDF"
                android:maxLines="1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_white_24dp"
                android:id="@+id/img_checkEmail"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txt_email"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_accessCode"
                android:text="@string/txt_access_code"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/edit_email" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_outline_white_24dp"
                android:id="@+id/img_accessCode"
                android:layout_above="@+id/edit_accessCode"
                android:visibility="visible"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_accessCode"
                android:layout_below="@id/txt_accessCode"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:textCursorDrawable="@null"
                android:backgroundTint="#DADDDF"
                android:maxLines="1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_white_24dp"
                android:id="@+id/img_checkAccessCode"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txt_accessCode"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_accessCode"
                android:id="@+id/txt_password"
                android:text="@string/txt_password"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_password"
                android:inputType="textPassword"
                android:layout_below="@id/txt_password"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:textCursorDrawable="@null"
                android:backgroundTint="#DADDDF"
                android:maxLines="1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_white_24dp"
                android:id="@+id/img_checkPassword"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txt_password"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_password"
                android:id="@+id/txt_repassword"
                android:text="@string/txt_repassword"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_repassword"
                android:inputType="textPassword"
                android:layout_below="@id/txt_repassword"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:textCursorDrawable="@null"
                android:backgroundTint="#DADDDF"
                android:maxLines="1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_white_24dp"
                android:id="@+id/img_checkRePassword"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txt_repassword"
                android:layout_alignParentEnd="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@id/edit_repassword"
                android:id="@+id/btn_done"
                android:textSize="16dp"
                android:textColor="#439EAA"
                android:background="@color/white"
                android:text="Done"
                android:elevation="20dp"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/txt_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_done"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:text="@string/txt_terms"/>

</RelativeLayout>